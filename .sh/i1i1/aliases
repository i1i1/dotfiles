is_installed() {
    which $1 &>/dev/null
}

alias ca=cargo
alias dc=docker
alias dcc=docker-compose
alias ec=vim
alias g=git
alias git=git_
alias grep='grep --color=auto'
alias l=ls
alias la='ll -a'
alias less='less -R'
alias ll='ls -l'
alias ls='ls_ --color=auto'
alias rg='rg --color=auto'
alias vi=vim
alias vim=edit

if is_installed exa && exa / &>/dev/null; then
    alias ls_='exa --color-scale'
else
    alias ls_='env ls'
fi
