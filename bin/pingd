#!/bin/bash
int=no
num=0

while sleep 1; do
    ping -c 4 1.1.1.1 2>&1 >/dev/null
    res=$?

    if [ $res = 1 -a $int = yes ]; then
        num=$((num + 1))
        if [ $num = 5 ]; then
            notify-send "No internet duuuuude!"
            int=no
        fi
    elif [ $res = 0]; then
        num=0
        if [ $int = no ]; then
            notify-send "Here it gooooes!"
            int=yes
        fi
    fi
done
